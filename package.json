{
  "name": "express-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": "./src/index.js",
  "scripts": {
    "prebuild": "npm run remove-dist",
    "postbuild": "npm run copy-resources",
    "build": "tsc",
    "prestart": "npm run remove-dist",
    "start": "cross-env NODE_ENV=local tsc-watch --project . --onSuccess \"npm run nodemon\"",
    "startup": "node ./dist/src/index.js",
    "prenodemon": "npm run copy-resources",
    "nodemon": "nodemon ./dist/src/index.js",
    "packaging": "npm run build && pkg ./dist/",
    "remove-dist": "rm -rf ./dist",
    "copy-resources": "cp -Rf ./package.json ./dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "./node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json --exclude 'node_modules/**/*.{j,t}s'",
    "lint:fix": "npm run lint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sureshkumar9/express-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sureshkumar9/express-server/issues"
  },
  "homepage": "https://github.com/sureshkumar9/express-server#readme",
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/node": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@types/node": "^14.14.25",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "nodemon": "^2.0.7",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  }
}
